<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:paddingLeft="@dimen/_20sdp"
    android:paddingTop="@dimen/_20sdp"
    android:paddingRight="@dimen/_20sdp"
    android:paddingBottom="@dimen/_20sdp"
    android:theme="@style/AppTheme" >

    <ImageView
        android:id="@+id/iv"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerInParent="true"
        android:src="@drawable/unnamed"
        android:contentDescription="TODO" />

    <TextView
        android:id="@+id/tvInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/iv"
        android:layout_gravity="center"
        android:layout_marginBottom="43dp"
        android:alpha="0.9"
        android:shadowColor="#E6EE096C"
        android:text="@string/message_read_tag"
        android:textColor="#0F0F0F"
        android:textSize="20sp"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/tvInfo2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"


        android:layout_alignBottom="@id/tvInfo"
        android:layout_marginBottom="-15dp"
        android:alpha="0.5"

        android:autoLink="web"
        android:clickable="true"
        android:focusable="true"
        android:text="@string/by_nfc_tag"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        android:textColor="#FC000000"
        android:textColorLink="#2C066B"
        android:textSize="12sp" />

</RelativeLayout>
